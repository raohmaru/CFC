<?xml version="1.0" encoding="utf-8"?>
<game xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:xsd="http://www.w3.org/2001/XMLSchema"
      name="Card Fighters' Clash"
      id="e3d56d9e-900d-49c6-b6ae-22cbb51be153"
      octgnVersion="3.1.55.0"
      version="0.3.1.2"
      markersize="20"
      tags="capcom snk fighter"
      description="A card game based in the SNK Playmoreâ€™s video game SNK vs. Capcom Card Fighters' Clash 2 Expand Edition.
      &#xd;&#xd;Automation rank: B
      &#xd;(This game contains play and event automations to play faster with less mistakes.)"
      setsurl="https://github.com/raohmaru/CFC"
      gameurl="https://github.com/raohmaru/CFC"
      authors="raohmaru"
      iconurl="https://raw.github.com/raohmaru/CFC/master/cfc_logo.png"
      scriptVersion="3.1.0.1"
	  usetwosidedtable="True">
	
	<scripts>
		<script src="Scripts/config.py" />
		<script src="Scripts/actions.py" />
		<script src="Scripts/events.py" />
		<script src="Scripts/autoscripts.py" />
		<script src="Scripts/cardsAutoscripts.py" />
		<script src="Scripts/cardsRules.py" />
		<script src="Scripts/RuleScript.py" />
		<script src="Scripts/RuleScript_config.py" />
		<script src="Scripts/RuleScript_lexer.py" />
		<script src="Scripts/RuleScript_filters.py" />
		<script src="Scripts/utils.py" />
		<script src="Scripts/winforms.py" />
		<script src="Scripts/extendedAPI.py" />
	</scripts>
	
	<events>
		<event name="OnTableLoad"        action="onTableLoad" />
		<event name="OnGameStart"        action="onGameStart" />
		<event name="OnLoadDeck"         action="onLoadDeck" />
		<event name="OnMoveCard"         action="onMoveCard" />
		<event name="OnScriptedMoveCard" action="onMoveCard" />
		<event name="OnTurn"             action="onTurnChange" />
	</events>
	
	<!-- <sounds>
		<sound name="tim" src="sounds/soundfile.mp3"/>
	</sounds> -->
	
	<fonts>
		<font src="fonts/SourceSansPro-Regular_CFC.ttf" size="12" target="context" />
		<font src="fonts/SourceSansPro-Regular_CFC.ttf" size="12" target="chat" />
		<font src="fonts/SourceSansPro-Regular_CFC.ttf" size="12" target="deckeditor" />
		<!-- <font src="fonts/SourceSansPro-Regular_CFC.ttf" size="12" target="notes" /> -->
	</fonts>
	
	<proxygen definitionsrc="Proxy/proxydef.xml">
	</proxygen>
	
	<documents>
		<document name="Rulebook" icon="Documents/manual.png" src="Documents/CFC-Rules.html" />
		<document name="Gameplay" icon="Documents/manual-octgn.png" src="Documents/CFC-Octgn.html" />
		<document name="FAQ" icon="Documents/manual-faq.png" src="Documents/CFC-FAQ.html" />
		<!-- <document name="Comprehensive Rules" icon="Documents/manual-comp.png" src="Documents/CFC-CompRules.html" /> -->
	</documents>

	<gameModes>
		<gameMode name="Standard" shortDescription="Regular game where Player's ring has 4 slots for characters" image="Art/standard.jpg" playerCount="2" />
	</gameModes>
	
	<globalvariables>
		<globalvariable name="Backups" value="{}" />
		<globalvariable name="UnitedAttack" value="[]" />
		<globalvariable name="Blockers" value="{}" />
	</globalvariables>
	
	<card back="Card/back.jpg" front="Card/front.png" width="90" height="126" cornerRadius="3">
		<property name="Publisher" type="String" ignoreText="True" textKind="Enum" />
		<property name="Team" type="String" ignoreText="True" textKind="Enum" />
		<property name="Type" type="String" textKind="Enum" />
		<property name="Subtype" type="String" textKind="Tokens" />
		<property name="Rarity" type="String" ignoreText="True" textKind="Enum" />
		<property name="Ability" type="String" />
		<property name="Ability Type" type="String" ignoreText="True" textKind="Enum" hidden="True" />
		<property name="Ability Name" type="String" ignoreText="True" hidden="True" />
		<property name="Rules" type="String" />
		<property name="BP" type="String" textKind="Enum" />
		<property name="SP" type="String" textKind="Enum" />
		<property name="Backup 1" type="String" textKind="Enum" />
		<property name="Backup 2" type="String" textKind="Enum" />
		<property name="Backup 3" type="String" textKind="Enum" />
		<property name="Number" type="String" ignoreText="True" />
		<property name="Illustrator" type="String" ignoreText="True" />
	</card>
	
	<table name="Table" visibility="undefined" ordered="False" width="1250" height="750" background="Background/background.jpg" backgroundStyle="uniformToFill" board="Background/ring.png" boardPosition="-327,-342,655,684" >
		<groupaction menu="Next phase" default="True" shortcut="Tab" execute="nextPhase" />
		<groupactions menu="Phases...">
			<groupaction menu="Go to Activate phase" shortcut="F1" execute="goToActivate" />
			<groupaction menu="Go to Draw phase" shortcut="F2" execute="goToDraw" />
			<groupaction menu="Go to Main phase" shortcut="F3" execute="goToMain" />
			<groupaction menu="Go to Attack phase" shortcut="F4" execute="goToAttack" />
			<groupaction menu="Go to Counterattack phase" shortcut="F5" execute="goToCounterattack" />
			<groupaction menu="Go to End phase" shortcut="F6" execute="goToEnd" />
			<groupaction menu="Go to Cleanup phase" shortcut="F7" execute="goToCleanup" />
		</groupactions>
		<groupactions menu="SP...">
			<groupactions menu="Gain SP...">
				<groupaction menu="by 1" shortcut="Ctrl+1" execute="plusSP" />
				<groupaction menu="by 2" shortcut="Ctrl+2" execute="plusSP2" />
				<groupaction menu="by 3" shortcut="Ctrl+3" execute="plusSP3" />
				<groupaction menu="by 4" shortcut="Ctrl+4" execute="plusSP4" />
				<groupaction menu="by 5" shortcut="Ctrl+5" execute="plusSP5" />
				<groupaction menu="by 6" shortcut="Ctrl+6" execute="plusSP6" />
				<groupaction menu="by 7" shortcut="Ctrl+7" execute="plusSP7" />
				<groupaction menu="by 8" shortcut="Ctrl+8" execute="plusSP8" />
				<groupaction menu="by 9" shortcut="Ctrl+9" execute="plusSP9" />
				<groupaction menu="by X" shortcut="Ctrl+0" execute="plusSPX" />
			</groupactions>
			<groupactions menu="Lose SP...">
				<groupaction menu="by 1" shortcut="Ctrl+Shift+1" execute="minusSP" />
				<groupaction menu="by 2" shortcut="Ctrl+Shift+2" execute="minusSP2" />
				<groupaction menu="by 3" shortcut="Ctrl+Shift+3" execute="minusSP3" />
				<groupaction menu="by 4" shortcut="Ctrl+Shift+4" execute="minusSP4" />
				<groupaction menu="by 5" shortcut="Ctrl+Shift+5" execute="minusSP5" />
				<groupaction menu="by 6" shortcut="Ctrl+Shift+6" execute="minusSP6" />
				<groupaction menu="by 7" shortcut="Ctrl+Shift+7" execute="minusSP7" />
				<groupaction menu="by 8" shortcut="Ctrl+Shift+8" execute="minusSP8" />
				<groupaction menu="by 9" shortcut="Ctrl+Shift+9" execute="minusSP9" />
				<groupaction menu="by X" shortcut="Ctrl+Shift+0" execute="minusSPX" />
			</groupactions>
		</groupactions>
		<groupaction menu="Realign cards" shortcut="Ctrl+L" execute="alignCards" />
		<groupaction menu="Clear cards" shortcut="esc" execute="clearAll" />
		<groupactions menu="Random...">
			<groupaction menu="Flip a coin" shortcut="Ctrl+Alt+2" execute="flipCoin" />
			<groupaction menu="Pick a random card" shortcut="Ctrl+Alt+R" execute="randomPick" />
			<groupaction menu="Pick a random card (Mine)"  execute="randomPickMine" />
			<groupaction menu="Pick a random card (Enemy)" execute="randomPickEnemy" />
		</groupactions>
		<groupaction menu="Setup game" shortcut="Ctrl+Shift+S" execute="setup" />
		<groupaction menu="Reset game" execute="scoop" />
		<groupactions menu="Settings...">
			<groupaction menu="Switch Play automation ON/OFF" execute="switchPlayAutomation" />
			<groupaction menu="Switch Phase Triggers automation ON/OFF" execute="switchPhaseAutomation" />
			<groupaction menu="Switch Alert Messages ON/OFF" execute="switchWinForms" />
			<groupaction menu="Switch Attack Damage automation ON/OFF" execute="switchAttackDamage" />
		</groupactions>
		<groupactions menu="Debug...">
			<groupaction menu="Setup" shortcut="Ctrl+Alt+S" execute="setupDebug" />
			<groupaction menu="Debug" execute="testSuite" />
			<groupaction menu="Set debug verbosity" execute="setDebugVerbosity" />
		</groupactions>
		
		<cardaction menu="Use ability/Resolve" default="True" execute="activate" />
		<cardaction menu="(Un)Freeze" shortcut="Ctrl+F" execute="freeze" />
		<cardaction menu="Don't unfreeze on Activate phase" shortcut="Ctrl+Shift+F" execute="doesNotUnfreeze" />
		<cardactions menu="Combat...">
			<cardaction menu="Attack" shortcut="Ctrl+A" execute="attack" />
			<cardaction menu="Attack without freezing" shortcut="Ctrl+Shift+A" execute="attackNoFreeze" />
			<cardaction menu="United Attack" shortcut="Ctrl+Alt+A" execute="attack" />
			<cardaction menu="Counter-attack" shortcut="Ctrl+B" execute="block" />
		</cardactions>
		<cardactions menu="Move...">
			<cardaction menu="KO" shortcut="Del" execute="destroy" />
			<cardaction menu="Remove" shortcut="Shift+Del" execute="remove" />
			<cardaction menu="Return to Hand" shortcut="Ctrl+H" execute="toHand" />
			<cardaction menu="Put into Deck (Top)" shortcut="Ctrl+D" execute="toDeckTop" />
			<cardaction menu="Put into Deck (Bottom)" shortcut="Ctrl+Shift+D" execute="toDeckBottom" />
			<cardaction menu="Change/Swap slot" execute="changeSlot" />
		</cardactions>
		<cardactions menu="Abilities...">
			<cardaction menu="Lose/Restore abilities" shortcut="Ctrl+X" batchExecute="toggleAbility" />
			<cardaction menu="Copy ability" shortcut="Ctrl+C" execute="copyAbility" />
			<cardaction menu="Swap abilities" shortcut="Ctrl+Shift+C" execute="swapAbilities" />
		</cardactions>
		<cardaction menu="Transform" shortcut="Ctrl+T" batchExecute="transformCards" />
		<cardaction menu="Realign card" shortcut="Ctrl+L" execute="alignCardAction" />
		<cardaction menu="Clear" shortcut="Esc" execute="clear" />
		<cardaction menu="Show backups types" shortcut="Ctrl+Alt+B" execute="askCardBackups" />
		<cardactions menu="Markers...">
			<cardactions menu="Raise BP...">
				<cardaction menu="by 1" shortcut="Ctrl+1" batchExecute="plusBP" />
				<cardaction menu="by 2" shortcut="Ctrl+2" batchExecute="plusBP2" />
				<cardaction menu="by 3" shortcut="Ctrl+3" batchExecute="plusBP3" />
				<cardaction menu="by 4" shortcut="Ctrl+4" batchExecute="plusBP4" />
				<cardaction menu="by 5" shortcut="Ctrl+5" batchExecute="plusBP5" />
				<cardaction menu="by 6" shortcut="Ctrl+6" batchExecute="plusBP6" />
				<cardaction menu="by 7" shortcut="Ctrl+7" batchExecute="plusBP7" />
				<cardaction menu="by 8" shortcut="Ctrl+8" batchExecute="plusBP8" />
				<cardaction menu="by 9" shortcut="Ctrl+9" batchExecute="plusBP9" />
				<cardaction menu="by X" shortcut="Ctrl+0" batchExecute="plusBPX" />
			</cardactions>
			<cardactions menu="Lower BP...">
				<cardaction menu="by 1" shortcut="Ctrl+Shift+1" batchExecute="minusBP" />
				<cardaction menu="by 2" shortcut="Ctrl+Shift+2" batchExecute="minusBP2" />
				<cardaction menu="by 3" shortcut="Ctrl+Shift+3" batchExecute="minusBP3" />
				<cardaction menu="by 4" shortcut="Ctrl+Shift+4" batchExecute="minusBP4" />
				<cardaction menu="by 5" shortcut="Ctrl+Shift+5" batchExecute="minusBP5" />
				<cardaction menu="by 6" shortcut="Ctrl+Shift+6" batchExecute="minusBP6" />
				<cardaction menu="by 7" shortcut="Ctrl+Shift+7" batchExecute="minusBP7" />
				<cardaction menu="by 8" shortcut="Ctrl+Shift+8" batchExecute="minusBP8" />
				<cardaction menu="by 9" shortcut="Ctrl+Shift+9" batchExecute="minusBP9" />
				<cardaction menu="by X" shortcut="Ctrl+Shift+0" batchExecute="minusBPX" />
			</cardactions>
			<cardaction menu="Change BP..." shortcut="Ctrl+Alt+0" batchExecute="changeBP" />
			<cardaction menu="Add markers..." shortcut="Ctrl+M" batchExecute="addMarkerAction" />
		</cardactions>
	</table>
	
	<player summary="HP: {#HP} | SP: {#SP} | Hand: {#Hand}">
		<counter name="HP" icon="counters/hp.png" default="30" reset="True" />
		<counter name="SP" icon="counters/sp.png" default="0" reset="True" />
		
		<globalvariable name="Ring" value="[None,None,None,None]" />
		<globalvariable name="PhaseIdx" value="0" />

		<hand name="Hand" visibility="me" width="90" height="126" icon="Groups/hand.png">
			<groupaction menu="Random discard" shortcut="Ctrl+Del" execute="randomDiscard" />
			<groupactions menu="Move all cards to...">
				<groupaction menu="Deck (Top)" shortcut="Ctrl+D" execute="toDeckTopAll" />
				<groupaction menu="Deck (Bottom)" shortcut="Ctrl+Shift+D" execute="toDeckBottomAll" />
				<groupaction menu="Discard pile" shortcut="Ctrl+Shift+Del" execute="discardAll" />
			</groupactions>
			<cardaction menu="Play card" default="True" shortcut="Ctrl+P" execute="play" />
			<cardaction menu="Play as backup" shortcut="Ctrl+B" execute="backup" />
			<cardaction menu="Show backups types" shortcut="Ctrl+Alt+B" execute="askCardBackups" />
			<cardaction menu="Discard card" shortcut="Del" execute="discard" />
			<cardactions menu="Move...">
				<cardaction menu="Put into Arena face down" shortcut="Ctrl+F" execute="toTableFaceDown" />
				<cardaction menu="Put into Deck (Top)" shortcut="Ctrl+D" execute="toDeckTop" />
				<cardaction menu="Put into Deck (Bottom)" shortcut="Ctrl+Shift+D" execute="toDeckBottom" />
			</cardactions>
			<cardaction menu="Transform" shortcut="Ctrl+T" batchExecute="transformCards" />
		</hand>
		<group name="Deck" visibility="none" width="90" height="126" icon="Groups/deck.png">
			<groupaction menu="Draw" shortcut="Ctrl+D" default="True" execute="draw" />
			<groupaction menu="Draw X cards" shortcut="Ctrl+Shift+D" execute="drawMany" />
			<groupactions menu="Random draw...">
				<groupaction menu="Draw a random card" shortcut="Ctrl+Alt+R" execute="randomDraw" />
				<groupaction menu="Draw a random Character card" shortcut="Ctrl+Alt+C" execute="randomDrawCHA" />
				<groupaction menu="Draw a random Action card" shortcut="Ctrl+Alt+A" execute="randomDrawAC" />
				<groupaction menu="Draw a random Reaction card" shortcut="Ctrl+Alt+E" execute="randomDrawRE" />
			</groupactions>
			<groupaction menu="Shuffle" shortcut="Ctrl+S" execute="shuffle" />
			<groupaction menu="Trash X cards" shortcut="Ctrl+Shift+T" execute="trash" />
			<groupaction menu="Rearrange X cards" shortcut="Ctrl+Shift+S" execute="prophecy" />
			<groupaction menu="Reveal/Hide top card" shortcut="Ctrl+R" execute="revealTopDeck" />
			<groupactions menu="Move all cards to...">
				<groupaction menu="Discard pile" shortcut="Ctrl+Shift+Del" execute="discardAll" />
			</groupactions>
			<cardaction menu="Put card into Hand" shortcut="Ctrl+H" execute="toHand" />
			<cardaction menu="Put card into Discard pile" shortcut="Del" execute="discard" />
			<cardaction menu="Put into Deck (Top)" shortcut="Ctrl+D" execute="toDeckTop" />
			<cardaction menu="Put into Deck (Bottom)" shortcut="Ctrl+Shift+D" execute="toDeckBottom" />
		</group>
		<group name="Discard Pile" visibility="all" width="90" height="126" icon="Groups/discards.png">
			<groupaction menu="Shuffle" shortcut="Ctrl+S" execute="shuffle" />
			<groupactions menu="Shuffle into Deck...">
				<groupaction menu="All cards" shortcut="Ctrl+Shift+S" execute="reshuffle" />
				<groupaction menu="All Character cards" execute="reshuffleCHA" />
				<groupaction menu="All Action cards" execute="reshuffleAC" />
				<groupaction menu="All Reaction cards" execute="reshuffleRE" />
			</groupactions>
			<groupaction menu="Swap with Deck" shortcut="Ctrl+Alt+S" execute="swapWithDeck" />
			<groupaction menu="Pick a random card" shortcut="Ctrl+Alt+R" execute="randomPick" />
			<groupactions menu="Move all cards to...">
				<groupaction menu="Hand" shortcut="Ctrl+H" execute="toHandAll" />
				<groupaction menu="Deck (Top)" shortcut="Ctrl+D" execute="toDeckTopAll" />
				<groupaction menu="Deck (Bottom)" shortcut="Ctrl+Shift+D" execute="toDeckBottomAll" />
			</groupactions>
			<cardaction menu="Return card to Hand" shortcut="Ctrl+H" default="True" execute="toHand" />
			<cardaction menu="Put into Deck (Top)" shortcut="Ctrl+D" execute="toDeckTop" />
			<cardaction menu="Put into Deck (Bottom)" shortcut="Ctrl+Shift+D" execute="toDeckBottom" />
			<cardaction menu="Put into Removed Pile" shortcut="Shift+Del" execute="remove" />
		</group>
		<group name="Removed Pile" visibility="all" width="90" height="126" icon="Groups/removed.png" collapsed="True">
			<groupaction menu="Shuffle" shortcut="Ctrl+S" execute="shuffle" />
			<groupactions menu="Move All Cards To...">
				<groupaction menu="Hand" shortcut="Ctrl+H" execute="toHandAll" />
				<groupaction menu="Deck (Top)" shortcut="Ctrl+D" execute="toDeckTopAll" />
				<groupaction menu="Deck (Bottom)" shortcut="Ctrl+Shift+D" execute="toDeckBottomAll" />
				<groupaction menu="Discard pile" shortcut="Ctrl+Shift+Del" execute="discardAll" />
			</groupactions>
			<cardaction menu="Return card to Hand" shortcut="Ctrl+H" default="True" execute="toHand" />
			<cardaction menu="Put card into Discard pile" shortcut="Del" execute="discard" />
			<cardaction menu="Put into Deck (Top)" shortcut="Ctrl+D" execute="toDeckTop" />
			<cardaction menu="Put into Deck (Bottom)" shortcut="Ctrl+Shift+D" execute="toDeckBottom" />
		</group>
	</player>
	
	<deck>
		<section name="Main" group="Deck" />
	</deck>
</game>