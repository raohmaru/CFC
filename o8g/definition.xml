<?xml version="1.0" encoding="utf-8"?>
<game xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:xsd="http://www.w3.org/2001/XMLSchema"
      name="Card Fighters' Clash"
      id="e3d56d9e-900d-49c6-b6ae-22cbb51be153"
      octgnVersion="3.4.214.0"
      version="0.7.5.350"
      markersize="20"
      tags="capcom snk fighter"
      description="A card game based in the SNK Playmoreâ€™s video game SNK vs. Capcom Card Fighters' Clash 2 Expand Edition.
      &#xd;&#xd;Automation rank: A
      &#xd;(This game contains play, event and cards automations to play faster with less mistakes.)"
      setsurl="http://octgngames.com/cfc/image-packs/"
      gameurl="http://octgngames.com/cfc/"
      authors="raohmaru"
      iconurl="https://raw.github.com/raohmaru/CFC/master/cfc_logo.png"
      scriptVersion="3.1.0.2"
	  usetwosidedtable="True">
	
	<scripts>
		<script src="Scripts/config.py" />
		<script src="Scripts/actions.py" />
		<script src="Scripts/events.py" />
		<script src="Scripts/eventsCustom.py" />
		<script src="Scripts/autoscripts.py" />
		<script src="Scripts/cardsAutoscripts.py" />
		<script src="Scripts/utils.py" />
		<script src="Scripts/utils_random.py" />
		<script src="Scripts/debug.py" />
		<script src="Scripts/winforms.py" />
		<script src="Scripts/extendedAPI.py" />
		<script src="Scripts/actionLabels.py" />
		<script src="Scripts/actionShow.py" />
		<script src="Scripts/cardsRules.py" />
		<script src="Scripts/rs/RuleScript.py" />
		<script src="Scripts/rs/RuleScript_config.py" />
		<script src="Scripts/rs/RuleScript_lexer.py" />
		<script src="Scripts/rs/RuleScript_filters.py" />
		<script src="Scripts/rs/RuleScript_commands.py" />
		<script src="Scripts/rs/RuleScript_abilities.py" />
		<script src="Scripts/rs/RuleScript_utils.py" />
	</scripts>
	
	<events>
		<event name="OnTableLoaded"        action="onTableLoaded" />
		<event name="OnGameStarted"        action="onGameStarted" />
		<event name="OnDeckLoaded"         action="onDeckLoaded" />
		<event name="OnCardsMoved"         action="onCardsMoved" />
		<event name="OnScriptedCardsMoved" action="onCardsMoved" />
		<event name="OnTurnPassed"         action="onTurnPassed" />
		<event name="OnPhasePassed"        action="onPhasePassed" />
		<event name="OnMarkerChanged"      action="onMarkerChanged" />
	</events>
	
	<!-- <sounds>
		<sound name="tim" src="sounds/soundfile.mp3"/>
	</sounds> -->
	
	<fonts>
		<font src="Resources/Fonts/SourceSansPro-Regular_CFC.ttf" size="12" target="context" />
		<font src="Resources/Fonts/SourceSansPro-Regular_CFC.ttf" size="12" target="chat" />
		<font src="Resources/Fonts/SourceSansPro-Regular_CFC.ttf" size="12" target="deckeditor" />
		<!-- <font src="Resources/Fonts/SourceSansPro-Regular_CFC.ttf" size="12" target="notes" /> -->
	</fonts>
	
	<proxygen definitionsrc="Proxy/proxydef.xml">
	</proxygen>
	
	<phases>
		<phase name="Activate Phase (F1)"       icon="Resources/Phases/phase1.png" />
		<phase name="Draw Phase (F2)"           icon="Resources/Phases/phase2.png" />
		<phase name="Main Phase (F3)"           icon="Resources/Phases/phase3.png" />
		<phase name="Attack Phase (F4)"         icon="Resources/Phases/phase4.png" />
		<phase name="Counter-attack Phase (F5)" icon="Resources/Phases/phase5.png" />
		<phase name="End Phase (F6)"            icon="Resources/Phases/phase6.png" />
		<phase name="Cleanup Phase (F7)"        icon="Resources/Phases/phase7.png" />
	</phases> 
	
	<documents>
		<document name="Rulebook" icon="Documents/manual.png" src="Documents/CFC-Rules.html" />
		<document name="Gameplay" icon="Documents/manual-octgn.png" src="Documents/CFC-Octgn.html" />
		<document name="FAQ" icon="Documents/manual-faq.png" src="Documents/CFC-FAQ.html" />
		<!-- <document name="Comprehensive Rules" icon="Documents/manual-comp.png" src="Documents/CFC-CompRules.html" /> -->
	</documents>

	<gameModes>
		<gameMode name="Standard" shortDescription="Regular game where Player's ring has 4 slots for characters" image="Resources/Art/standard.jpg" playerCount="2" />
	</gameModes>
	
	<globalvariables>
		<globalvariable name="Backups" value="{}" />
		<globalvariable name="UnitedAttack" value="[]" />
		<globalvariable name="Blockers" value="{}" />
		<globalvariable name="Transformed" value="{}" />
		<globalvariable name="GameEvents" value="{}" />
		<globalvariable name="CardCost" value="{}" />
		<globalvariable name="Rules" value="{}" />
		<globalvariable name="ActionTempVars" value="{}" />
	</globalvariables>
	
	<card back="Resources/Card/back.jpg" front="Resources/Card/front.png" width="90" height="126" cornerRadius="3">
		<property name="Publisher" type="String" ignoreText="True" textKind="Enum" />
		<property name="Team" type="String" ignoreText="True" textKind="Enum" />
		<property name="Type" type="String" textKind="Enum" />
		<property name="Subtype" type="String" textKind="Tokens" />
		<property name="Rarity" type="String" ignoreText="True" textKind="Enum" />
		<property name="Ability" type="String" />
		<property name="Ability Type" type="String" ignoreText="True" textKind="Enum" hidden="True" />
		<property name="Ability Name" type="String" ignoreText="True" hidden="True" />
		<property name="Rules" type="String" />
		<property name="BP" type="String" textKind="Enum" />
		<property name="SP" type="String" textKind="Enum" />
		<property name="Backup 1" type="String" textKind="Enum" />
		<property name="Backup 2" type="String" textKind="Enum" />
		<property name="Backup 3" type="String" textKind="Enum" />
		<property name="Number" type="String" ignoreText="True" />
		<property name="Illustrator" type="String" ignoreText="True" />
	</card>
	
	<gameboards src="Resources/Background/ring.png" x="-327" y="-342" width="655" height="684">
	</gameboards>
	
	<table name="Table" visibility="undefined" ordered="False" width="1250" height="750" background="Resources/Background/background.jpg" backgroundStyle="uniformToFill">
		<groupaction menu="Next phase" shortcut="Tab" execute="nextPhase" showIf="acsh_gameStarted" />
		<groupactions menu="Phases..." showIf="acsh_gameStarted">
			<groupaction menu="Go to Activate phase"      shortcut="F1" execute="gotoActivate" />
			<groupaction menu="Go to Draw phase"          shortcut="F2" execute="gotoDraw" />
			<groupaction menu="Go to Main phase"          shortcut="F3" execute="gotoMain" />
			<groupaction menu="Go to Attack phase"        shortcut="F4" execute="gotoAttack" />
			<groupaction menu="Go to Counterattack phase" shortcut="F5" execute="gotoCounterattack" />
			<groupaction menu="Go to End phase"           shortcut="F6" execute="gotoEnd" />
			<groupaction menu="Go to Cleanup phase"       shortcut="F7" execute="gotoCleanup" />
		</groupactions>
		<groupaction menu="Setup game" shortcut="Ctrl+Shift+S" execute="setup" showIf="acsh_gameNotStarted" />
		<groupactions menu="SP...">
			<groupactions menu="Gain SP...">
				<groupaction menu="by 1" shortcut="Ctrl+1" execute="plusSP" />
				<groupaction menu="by 2" shortcut="Ctrl+2" execute="plusSP2" />
				<groupaction menu="by 3" shortcut="Ctrl+3" execute="plusSP3" />
				<groupaction menu="by 4" shortcut="Ctrl+4" execute="plusSP4" />
				<groupaction menu="by 5" shortcut="Ctrl+5" execute="plusSP5" />
				<groupaction menu="by 6" shortcut="Ctrl+6" execute="plusSP6" />
				<groupaction menu="by 7" shortcut="Ctrl+7" execute="plusSP7" />
				<groupaction menu="by 8" shortcut="Ctrl+8" execute="plusSP8" />
				<groupaction menu="by 9" shortcut="Ctrl+9" execute="plusSP9" />
				<groupaction menu="by X" shortcut="Ctrl+0" execute="plusSPX" />
			</groupactions>
			<groupactions menu="Lose SP...">
				<groupaction menu="by 1" shortcut="Ctrl+Shift+1" execute="minusSP" />
				<groupaction menu="by 2" shortcut="Ctrl+Shift+2" execute="minusSP2" />
				<groupaction menu="by 3" shortcut="Ctrl+Shift+3" execute="minusSP3" />
				<groupaction menu="by 4" shortcut="Ctrl+Shift+4" execute="minusSP4" />
				<groupaction menu="by 5" shortcut="Ctrl+Shift+5" execute="minusSP5" />
				<groupaction menu="by 6" shortcut="Ctrl+Shift+6" execute="minusSP6" />
				<groupaction menu="by 7" shortcut="Ctrl+Shift+7" execute="minusSP7" />
				<groupaction menu="by 8" shortcut="Ctrl+Shift+8" execute="minusSP8" />
				<groupaction menu="by 9" shortcut="Ctrl+Shift+9" execute="minusSP9" />
				<groupaction menu="by X" shortcut="Ctrl+Shift+0" execute="minusSPX" />
			</groupactions>
		</groupactions>
		<groupaction menu="Realign cards" shortcut="Ctrl+I" execute="alignCards" />
		<groupaction menu="Clear cards" shortcut="esc" execute="clearAll" />
		<groupactions menu="Random...">
			<groupaction menu="Flip a coin" shortcut="Ctrl+Alt+2" execute="flipCoin" />
			<groupaction menu="Pick a random card" shortcut="Ctrl+Alt+R" execute="randomPick" />
			<groupaction menu="Pick a random card (Mine)"  execute="randomPickMine" />
			<groupaction menu="Pick a random card (Enemy)" execute="randomPickEnemy" />
		</groupactions>
		<groupaction menu="Restart game" shortcut="Ctrl+Alt+Shift+R" execute="scoop" showIf="acsh_Debug" />
		<groupactions menu="Settings...">
			<groupaction menu="Switch Play automation ON/OFF" execute="switchPlayAutomation" getName="aclb_PlayAutomation" />
			<groupaction menu="Switch Phase Triggers automation ON/OFF" execute="switchPhaseAutomation" getName="aclb_PhaseAutomation" />
			<groupaction menu="Switch Alert Messages ON/OFF" execute="switchWinForms" getName="aclb_WinForms" />
			<groupaction menu="Switch Attack Damage automation ON/OFF" execute="switchAttackDamage" getName="aclb_AttackDamage" />
		</groupactions>
		<groupactions menu="Debug..." showIf="acsh_Debug">
			<groupaction menu="Setup" shortcut="Ctrl+Alt+S" execute="setupDebug" />
			<groupaction menu="Test" execute="testSuite" />
			<groupaction menu="Set debug verbosity" execute="setDebugVerbosity" />
			<groupaction menu="Create card" execute="createCard" />
		</groupactions>
		
		<cardaction menu="Default action" default="True" execute="defaultAction" getName="aclb_Default" />
		<cardaction menu="(Un)Freeze" shortcut="Ctrl+F" execute="freeze" getName="aclb_Freeze" showIf="acsh_isChar" />
		<cardaction menu="Don't unfreeze on Activate phase" shortcut="Ctrl+Shift+F" execute="doesNotUnfreeze" showIf="acsh_isChar" />
		<cardactions menu="Combat..." showIf="acsh_isChar">
			<cardaction menu="Attack" shortcut="Ctrl+A" execute="attack" getName="aclb_Attack" showIf="acsh_isActivePlayer" />
			<cardaction menu="Attack without freezing" shortcut="Ctrl+Shift+A" execute="attackNoFreeze" showIf="acsh_isActivePlayerAndNotAttacking" />
			<cardaction menu="United Attack" shortcut="Ctrl+Alt+A" execute="attack" showIf="acsh_isActivePlayerAndNotAttacking" />
			<cardaction menu="Counter-attack (Block)" shortcut="Ctrl+B" execute="block" getName="aclb_Block" showIf="acsh_isNotActivePlayer" />
		</cardactions>
		<cardactions menu="Move...">
			<cardaction menu="KO" shortcut="Del" execute="destroy" getName="aclb_Destroy" />
			<cardaction menu="Remove" shortcut="Shift+Del" execute="remove" />
			<cardaction menu="Return to Hand" shortcut="Ctrl+H" execute="toHand" />
			<cardaction menu="Put into Deck (Top)" shortcut="Ctrl+D" execute="toDeckTop" />
			<cardaction menu="Put into Deck (Bottom)" shortcut="Ctrl+Shift+D" execute="toDeckBottom" />
			<cardaction menu="Shuffle into Deck" shortcut="Ctrl+S" batchExecute="shuffleIntoDeck" />
			<cardaction menu="Change/Swap slot" execute="changeSlot" getName="aclb_ChangeSlot" showIf="acsh_isChar" />
		</cardactions>
		<cardactions menu="Abilities..." showIf="acsh_isChar">
			<cardaction menu="Lose/Restore abilities" shortcut="Ctrl+X" execute="toggleAbility" getName="aclb_Ability" />
			<cardaction menu="Copy ability" shortcut="Ctrl+C" execute="copyAbility" />
			<cardaction menu="Swap abilities" shortcut="Ctrl+Shift+C" execute="swapAbilities" showIf="acsh_hasAbility" />
			<cardaction menu="Steal ability" execute="stealAbility" />
		</cardactions>
		<cardactions menu="BP / Markers...">
			<cardactions menu="Raise BP..." showIf="acsh_isChar">
				<cardaction menu="+1" shortcut="Ctrl+1" batchExecute="plusBP" />
				<cardaction menu="+2" shortcut="Ctrl+2" batchExecute="plusBP2" />
				<cardaction menu="+3" shortcut="Ctrl+3" batchExecute="plusBP3" />
				<cardaction menu="+4" shortcut="Ctrl+4" batchExecute="plusBP4" />
				<cardaction menu="+5" shortcut="Ctrl+5" batchExecute="plusBP5" />
				<cardaction menu="+6" shortcut="Ctrl+6" batchExecute="plusBP6" />
				<cardaction menu="+7" shortcut="Ctrl+7" batchExecute="plusBP7" />
				<cardaction menu="+8" shortcut="Ctrl+8" batchExecute="plusBP8" />
				<cardaction menu="+9" shortcut="Ctrl+9" batchExecute="plusBP9" />
				<cardaction menu="+X" shortcut="Ctrl+0" batchExecute="plusBPX" />
			</cardactions>
			<cardactions menu="Lower BP..." showIf="acsh_isChar">
				<cardaction menu="-1" shortcut="Ctrl+Shift+1" batchExecute="minusBP" />
				<cardaction menu="-2" shortcut="Ctrl+Shift+2" batchExecute="minusBP2" />
				<cardaction menu="-3" shortcut="Ctrl+Shift+3" batchExecute="minusBP3" />
				<cardaction menu="-4" shortcut="Ctrl+Shift+4" batchExecute="minusBP4" />
				<cardaction menu="-5" shortcut="Ctrl+Shift+5" batchExecute="minusBP5" />
				<cardaction menu="-6" shortcut="Ctrl+Shift+6" batchExecute="minusBP6" />
				<cardaction menu="-7" shortcut="Ctrl+Shift+7" batchExecute="minusBP7" />
				<cardaction menu="-8" shortcut="Ctrl+Shift+8" batchExecute="minusBP8" />
				<cardaction menu="-9" shortcut="Ctrl+Shift+9" batchExecute="minusBP9" />
				<cardaction menu="-X" shortcut="Ctrl+Shift+0" batchExecute="minusBPX" />
			</cardactions>
			<cardaction menu="Change BP..." shortcut="Ctrl+Alt+0" batchExecute="changeBP" showIf="acsh_isChar" />
			<cardaction menu="Add markers..." shortcut="Ctrl+M" batchExecute="addMarkerAction" />
		</cardactions>
		<cardaction menu="Transform" shortcut="Ctrl+Shift+T" batchExecute="transformCards" />
		<cardaction menu="Realign card" shortcut="Ctrl+I" execute="alignCardAction" />
		<cardaction menu="Show available backups" shortcut="Ctrl+Alt+B" execute="askCardBackups" showIf="acsh_isChar" />
		<cardaction menu="Clear" shortcut="Esc" execute="clear" />
	</table>
	
	<player summary="HP: {#HP} | SP: {#SP} | Hand: {#Hand}">
		<counter name="HP" icon="Resources/Counters/hp.png" default="30" reset="True" />
		<counter name="SP" icon="Resources/Counters/sp.png" default="0"  reset="True" />
		
		<globalvariable name="Ring" value="[None,None,None,None]" />

		<hand name="Hand" visibility="me" icon="Resources/Groups/hand.png">
			<groupaction menu="Random discard" shortcut="Ctrl+Del" execute="randomDiscard" />
			<groupactions menu="Move all cards to...">
				<groupaction menu="Deck (Top)" shortcut="Ctrl+D" execute="toDeckTopAll" />
				<groupaction menu="Deck (Bottom)" shortcut="Ctrl+Shift+D" execute="toDeckBottomAll" />
				<groupaction menu="Discard pile" shortcut="Ctrl+Shift+Del" execute="discardAll" />
				<groupaction menu="Shuffle into Deck" shortcut="Ctrl+S" execute="shuffleIntoDeck" />
			</groupactions>
			<cardaction menu="Play card" default="True" shortcut="Ctrl+P" execute="play" />
			<cardaction menu="Play as backup" shortcut="Ctrl+B" execute="backup" showIf="acsh_isChar" />
			<cardaction menu="Discard card" shortcut="Del" execute="discard" />
			<cardactions menu="Move...">
				<cardaction menu="Put into Arena face down" shortcut="Ctrl+F" execute="toTableFaceDown" />
				<cardaction menu="Put into Deck (Top)" shortcut="Ctrl+D" execute="toDeckTop" />
				<cardaction menu="Put into Deck (Bottom)" shortcut="Ctrl+Shift+D" execute="toDeckBottom" />
				<cardaction menu="Shuffle into Deck" shortcut="Ctrl+S" batchExecute="shuffleIntoDeck" />
			</cardactions>
			<cardaction menu="Transform" shortcut="Ctrl+Shift+T" batchExecute="transformCards" />
			<cardaction menu="Show backups types" shortcut="Ctrl+Alt+B" execute="askCardBackups" showIf="acsh_isChar" />
			<cardaction menu="Clear" shortcut="Esc" execute="clear" />
		</hand>
		<group name="Deck" visibility="none" icon="Resources/Groups/deck.png">
			<groupaction menu="Draw" shortcut="Ctrl+D" default="True" execute="draw" />
			<groupaction menu="Draw X cards" shortcut="Ctrl+Shift+D" execute="drawMany" />
			<groupactions menu="Random draw...">
				<groupaction menu="Draw a random card" shortcut="Ctrl+Alt+R" execute="randomDraw" />
				<groupaction menu="Draw a random Character card" shortcut="Ctrl+Alt+C" execute="randomDrawCHA" />
				<groupaction menu="Draw a random Action card" shortcut="Ctrl+Alt+A" execute="randomDrawAC" />
				<groupaction menu="Draw a random Reaction card" shortcut="Ctrl+Alt+E" execute="randomDrawRE" />
			</groupactions>
			<groupaction menu="Shuffle" shortcut="Ctrl+S" execute="shuffle" />
			<groupaction menu="Trash X cards" shortcut="Ctrl+Shift+T" execute="trash" />
			<groupaction menu="Rearrange X cards" shortcut="Ctrl+Shift+S" execute="prophecy" />
			<groupaction menu="Reveal/Hide top card" shortcut="Ctrl+R" execute="revealTopDeck" getName="aclb_RevealTopDeck" />
			<groupactions menu="Move all cards to...">
				<groupaction menu="Hand" shortcut="Ctrl+Shift+H" execute="toHandAll" />
				<groupaction menu="Discard pile" shortcut="Ctrl+Shift+Del" execute="discardAll" />
			</groupactions>
			<cardaction menu="Put card into Hand" shortcut="Ctrl+H" execute="toHand" />
			<cardaction menu="Put card into Discard pile" shortcut="Del" execute="discard" />
			<cardaction menu="Put into Deck (Top)" shortcut="Ctrl+D" execute="toDeckTop" />
			<cardaction menu="Put into Deck (Bottom)" shortcut="Ctrl+Shift+D" execute="toDeckBottom" />
		</group>
		<group name="Discard Pile" visibility="all" icon="Resources/Groups/discards.png">
			<groupaction menu="Shuffle" shortcut="Ctrl+S" execute="shuffle" />
			<groupactions menu="Shuffle into Deck...">
				<groupaction menu="All cards" shortcut="Ctrl+Shift+S" execute="reshuffle" />
				<groupaction menu="All Character cards" execute="reshuffleCHA" />
				<groupaction menu="All Action cards" execute="reshuffleAC" />
				<groupaction menu="All Reaction cards" execute="reshuffleRE" />
			</groupactions>
			<groupaction menu="Swap with Deck" shortcut="Ctrl+Alt+S" execute="swapWithDeck" />
			<groupaction menu="Pick a random card" shortcut="Ctrl+Alt+R" execute="randomPick" />
			<groupactions menu="Move all cards to...">
				<groupaction menu="Hand" shortcut="Ctrl+Shift+H" execute="toHandAll" />
				<groupaction menu="Deck (Top)" shortcut="Ctrl+Shift+D" execute="toDeckTopAll" />
				<groupaction menu="Deck (Bottom)" shortcut="Ctrl+Alt+Shift+D" execute="toDeckBottomAll" />
			</groupactions>
			<cardaction menu="Return card to Hand" shortcut="Ctrl+H" default="True" execute="toHand" />
			<cardaction menu="Put into Deck (Top)" shortcut="Ctrl+D" execute="toDeckTop" />
			<cardaction menu="Put into Deck (Bottom)" shortcut="Ctrl+Shift+D" execute="toDeckBottom" />
			<cardaction menu="Put into Removed Pile" shortcut="Shift+Del" execute="remove" />
		</group>
		<group name="Removed Pile" visibility="all" icon="Resources/Groups/removed.png" collapsed="True">
			<groupaction menu="Shuffle" shortcut="Ctrl+S" execute="shuffle" />
			<groupactions menu="Move All Cards To...">
				<groupaction menu="Hand" shortcut="Ctrl+Shift+H" execute="toHandAll" />
				<groupaction menu="Deck (Top)" shortcut="Ctrl+Shift+D" execute="toDeckTopAll" />
				<groupaction menu="Deck (Bottom)" shortcut="Ctrl+Alt+Shift+D" execute="toDeckBottomAll" />
				<groupaction menu="Discard pile" shortcut="Ctrl+Shift+Del" execute="discardAll" />
			</groupactions>
			<cardaction menu="Return card to Hand" shortcut="Ctrl+H" default="True" execute="toHand" />
			<cardaction menu="Put card into Discard pile" shortcut="Del" execute="discard" />
			<cardaction menu="Put into Deck (Top)" shortcut="Ctrl+D" execute="toDeckTop" />
			<cardaction menu="Put into Deck (Bottom)" shortcut="Ctrl+Shift+D" execute="toDeckBottom" />
		</group>
	</player>
	
	<deck>
		<section name="Main" group="Deck" />
	</deck>
</game>